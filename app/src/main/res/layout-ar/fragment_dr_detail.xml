<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/avatarimg"
            >

        </ImageView>

        <TextView
            android:id="@+id/dr_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Mohamed Salah"
            android:fontFamily="@font/cairobold"
            android:textColor="#003376"
            android:textSize="20sp"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#aaaaaa"
            android:textSize="16sp"
            android:text="Consultant Ear, Nose and Throat"
            android:fontFamily="@font/cairoregular"
            >

        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/imgt"
                android:layout_marginTop="5dp"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:src="@drawable/hospitalsmallicon"


                >

            </ImageView>

            <TextView
                android:layout_toLeftOf="@id/imgt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مستشفى جده الجديده"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/cairobold"
                android:textColor="#003376"
                android:textSize="16sp"
                >

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/tt"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/timesmallicon"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="11dp"

                >

            </ImageView>

            <TextView
                android:id="@+id/ty"
                android:layout_toLeftOf="@id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:00 PM - 4:00 PM"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:textColor="#003376"
                android:fontFamily="@font/cairosemibold"
                >

            </TextView>

            <ImageView
                android:id="@+id/uy"
                android:layout_toLeftOf="@id/ty"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/daysmallicon"
                android:layout_marginTop="5dp"
                android:layout_marginRight="40.5dp"
                android:layout_marginBottom="11dp"
                >
            </ImageView>


            <TextView
                android:layout_toLeftOf="@id/uy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sun, Tue, Thu"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:textColor="#003376"
                android:fontFamily="@font/cairosemibold"
                >

            </TextView>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairobold"
            android:text="@string/about_doctor"
            android:textColor="#003376"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Consultant Ear, Nose and Throat, Consultant Ear, Nose
 and Throat, Consultant Ear, Nose and Throat,
Consultant Ear, Nose and Throat, Consultant Ear, Nose
and Throat, Consultant Ear, Nose and Throat, Consultant
Ear, Nose and Throat, Consultant Ear, Nose and Throat,
Consultant Ear, Nose and Throat, Consultant Ear, Nose
and Throat. "
            android:textColor="#666666"

            >

        </TextView>


        <Button
            android:id="@+id/bookapp"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonfillcorners"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="26dp"
            android:text="@string/book"
            android:textColor="#fff"
            android:fontFamily="@font/cairoregular"

            >

        </Button>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>