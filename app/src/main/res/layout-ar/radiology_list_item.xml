<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:id="@+id/card"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        >

        <LinearLayout
            android:id="@+id/lin11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c5eeff"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/raditit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X-Ray Name"
                android:textColor="#003376"
                android:textSize="16sp"
                android:fontFamily="@font/cairoregular"

                >

            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_below="@id/lin11"
            android:id="@+id/drf"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/doctorgrayicon"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            >

        </ImageView>


        <TextView
            android:layout_below="@id/lin11"
            android:id="@+id/drnf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/drf"
            android:textSize="18sp"
            android:fontFamily="@font/cairobold"
            android:textColor="#666666"
            android:text="Mohamed Salah"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            >

        </TextView>


        <TextView
            android:id="@+id/jobf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drnf"
            android:layout_toLeftOf="@id/drf"
            android:layout_marginRight="4dp"
            android:text="Neurosurgery Clinic"
            android:fontFamily="@font/cairosemibold"
            android:textSize="14sp"
            android:textColor="#666666"
            >

        </TextView>

        <ImageView
            android:id="@+id/ddt"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/datetimegrayicon"
            android:layout_below="@id/jobf"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="3dp"

            >

        </ImageView>

        <TextView
            android:id="@+id/djt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ddt"
            android:layout_below="@id/jobf"
            android:text="10-03-2019"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/cairosemibold"
            android:layout_marginLeft="10dp"

            >

        </TextView>

        <TextView
            android:id="@+id/dttxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/djt"
            android:layout_below="@id/jobf"
            android:text="5:00 PM"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/cairosemibold"
            android:layout_marginRight="42dp"
            >

        </TextView>

        <ImageButton
            android:id="@+id/radbotton"
            android:layout_marginTop="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left_icon"
            android:layout_marginLeft="10dp"
            >

        </ImageButton>


    </RelativeLayout>

</androidx.cardview.widget.CardView>