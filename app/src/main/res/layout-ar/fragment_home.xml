<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <LinearLayout
            android:id="@+id/appointement"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/buttoncorners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:onClick="GetAppointment"


            >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/appointmentsicon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"



                >

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Appointments"
                android:textSize="18sp"
                android:textColor="#003376"
                android:fontFamily="@font/cairosemibold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/buttoncorners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:onClick="GetPatientPortal"


            >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/patientportalicon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"

                >

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/patientportal"
                android:textSize="18sp"
                android:textColor="#003376"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cairosemibold"
                >

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="@drawable/buttoncorners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:onClick="GetServices"
            android:layout_marginBottom="27dp"

            >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/servicesicon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"

                >

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Services"
                android:textSize="18sp"
                android:layout_below="@id/img3"
                android:textColor="#003376"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/cairosemibold"
                >

            </TextView>


        </LinearLayout>
    </LinearLayout>


</FrameLayout>