<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:id="@+id/card3"
    android:animateLayoutChanges="true"
    android:paddingBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb">

        <LinearLayout
            android:id="@+id/lin11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9d800"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/raditit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:text="Lab Name"
                android:textColor="#003376"
                android:textSize="16sp"

                >

            </TextView>

        </LinearLayout>

        <ImageView
            android:id="@+id/drf"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/lin11"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/doctorgrayicon">

        </ImageView>


        <TextView
            android:id="@+id/labnf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin11"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/drf"
            android:fontFamily="@font/cairobold"
            android:text="Mohamed Salah"
            android:textColor="#666666"
            android:textSize="18sp">

        </TextView>


        <TextView
            android:id="@+id/labtit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labnf"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/drf"
            android:fontFamily="@font/cairosemibold"
            android:text="Neurosurgery Clinic"
            android:textColor="#666666"
            android:textSize="14sp">

        </TextView>

        <ImageView
            android:id="@+id/ddt"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/labtit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/datetimegrayicon"

            >

        </ImageView>

        <TextView
            android:id="@+id/djt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labtit"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ddt"
            android:fontFamily="@font/cairosemibold"
            android:text="10-03-2019"
            android:textColor="#666666"
            android:textSize="14sp"

            >

        </TextView>

        <TextView
            android:id="@+id/dttxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labtit"
            android:layout_marginLeft="42dp"
            android:layout_toRightOf="@id/djt"
            android:fontFamily="@font/cairosemibold"
            android:text="5:00 PM"
            android:textColor="#666666"
            android:textSize="14sp">

        </TextView>

        <ImageButton
            android:id="@+id/openarrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrowrightbtn">

        </ImageButton>


    </RelativeLayout>

</androidx.cardview.widget.CardView>