<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selectcirc"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_appointment_has_been_n_t_tsent_successfully"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#003376"
        android:fontFamily="@font/cairosemibold"


        >


    </TextView>

    <Button
        android:id="@+id/done"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonfillcorners"
        android:text="@string/done"
        android:textColor="#fff"
        android:layout_marginBottom="19dp"
        >

    </Button>




</LinearLayout>