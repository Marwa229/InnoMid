<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:id="@+id/cardd"
    android:animateLayoutChanges="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dedede"
        >

        <ImageView

            android:id="@+id/drfc"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/doctorgrayicon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            >

        </ImageView>


        <TextView

            android:id="@+id/drnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/drfc"
            android:textSize="18sp"
            android:fontFamily="@font/cairosemibold"
            android:textColor="#666666"
            android:text="Mohamed Salah"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            >

        </TextView>

        <TextView
            android:id="@+id/jobc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drnc"
            android:layout_toRightOf="@id/drfc"
            android:layout_marginLeft="4dp"
            android:text="Neurosurgery Clinic"
            android:fontFamily="@font/cairosemibold"
            android:textSize="14sp"
            android:textColor="#666666"
            >

        </TextView>

        <ImageView
            android:id="@+id/ddt"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/datetimegrayicon"
            android:layout_below="@id/jobc"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="3dp"

            >

        </ImageView>

        <TextView
            android:id="@+id/djt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ddt"
            android:layout_below="@id/jobc"
            android:text="10-03-2019"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/cairosemibold"
            android:layout_marginLeft="10dp"

            >

        </TextView>

        <TextView
            android:id="@+id/dttxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/djt"
            android:layout_below="@id/jobc"
            android:text="5:00 PM"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/cairosemibold"
            android:layout_marginLeft="42dp"
            >





        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jobc"
            android:text="Canceled"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/cairosemibold"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            >

        </TextView>


    </RelativeLayout>



</androidx.cardview.widget.CardView>